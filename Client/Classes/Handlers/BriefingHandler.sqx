namespace Mission.Client
{
	public class BriefingHandler : IBriefingHandler
	{
        // Creates the briefing texts for the player.
        public method CreateBriefing()
        {
			player createDiaryRecord ["Diary", ["My Mission",
			"This is a template mission<br />" +
			"Replace this text with the briefing of your scenario."]];
		};
	};
};
