using Mission.Common;

namespace Mission.Client
{
	public class TaskConfig : ITaskConfig
	{
		private fields ["_mTaskInfos" as Array /* of TaskInfo */];
		
		// Creates a TaskConfig object.
		public constructor()
		{
			_mTaskInfos = [
				[PlayerTask.FindBlueArrow, "Find the blue arrow", "Find the blue arrow. Note that your time is limited."] new TaskInfo,
				[PlayerTask.FindRedArrow, "Find the red arrow", "Find the red arrow. Note that your time is limited."] new TaskInfo
			];
		};
		
		// Gets the task info object assigned to a certain task.
		// _task (MissionTask): The task to get info about.
		// Returns (TaskInfo): The task info object associated to the task. classNull if no task info object could be found.
		public virtual method TaskInfo GetTaskInfo("_task" as PlayerTask)
		{
			{
				if (_x.Task == _task) then {
					return _x;
				};
			} foreach _mTaskInfos as TaskInfo;
			
			return classNull;
		};
	};
};
