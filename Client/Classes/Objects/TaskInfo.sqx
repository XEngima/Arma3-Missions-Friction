 * Description:
 * Configuration info item for a task.
 */

namespace Mission.Client
{
	public class TaskInfo
	{
		// Creates a TaskInfo object.
		public constructor("_task" as PlayerTask, "_shortDescription" as String, "_description" as String)
		{
			_self.Task = _task;
			_self.ShortDescription = _shortDescription;
			_self.Description = _description;
		};
		
		// Gets the task enum associated with the task info object.
		public property PlayerTask Task { get; private set; };
		
		// Gets the description associated with the task.
		public property String ShortDescription { get; private set; };
		
		// Gets the description associated with the task.
		public property String Description { get; private set; };
	};
};
