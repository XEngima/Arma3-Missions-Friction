	public class OperationShoeLaceCampaign : Campaign
	{
		// Creates a OperationShoeLaceCampaign object.
		public constructor()
		{
			call _base.Constructor;
		};
		
		protected override method SelectMissions("_missions" as Array /* of Mission */)
		{
			private ["_mission" as Mission];
			
			_mission = new CaptureTheAirbase;
			[west] call _mission.SetActingSide;
			
			_missions pushBack _mission;
			_missions pushBack new CannonballRun;
			_missions pushBack new Establishments;
			_missions pushBack new HawkDown;
			_missions pushBack new CatAndMouse;
			_missions pushBack new NightTensions;
			_missions pushBack new AirStationAssault;
		};
		
