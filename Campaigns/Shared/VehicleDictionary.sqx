				["FUEL TRUCK", "B_Truck_01_fuel_F", "O_Truck_03_fuel_F"] new VehicleSideAlias,
				["MEDICAL TRUCK", "B_Truck_01_medical_F", "O_Truck_03_medical_F"] new VehicleSideAlias,
				["DEVICE TRUCK", "B_Truck_01_box_F", "O_Truck_03_device_F"] new VehicleSideAlias,
				["REPAIR TRUCK", "B_Truck_01_Repair_F", "O_Truck_03_repair_F"] new VehicleSideAlias,
				
				// Cars
				["MRAP", "B_MRAP_01_F", "O_MRAP_02_F"] new VehicleSideAlias,
				["MRAP HMG", "B_MRAP_01_hmg_F", "O_MRAP_02_hmg_F"] new VehicleSideAlias,
				["QUADBIKE", "B_Quadbike_01_F", "O_Quadbike_01_F"] new VehicleSideAlias,
				["PROWLER", "B_LSV_01_unarmed_F", "O_LSV_02_unarmed_F"] new VehicleSideAlias,
				["PROWLER ARMED", "B_LSV_01_armed_F", "O_LSV_02_armed_F"] new VehicleSideAlias,
				["PROWLER AT", "B_LSV_01_AT_F", "O_LSV_02_AT_F"] new VehicleSideAlias,
				
				// APC
				["APC TRANSPORT CANNON", "B_APC_Wheeled_01_cannon_F", "O_APC_Tracked_02_cannon_F"] new VehicleSideAlias,
				["APC TRANSPORT RCWS", "B_APC_Tracked_01_rcws_F", "O_APC_Wheeled_02_rcws_v2_F"] new VehicleSideAlias,
				
				// Air vehicles
				["HEAVY ATTACK HELICOPTER", "B_Heli_Attack_01_dynamicLoadout_F", "O_Heli_Light_02_dynamicLoadout_F"] new VehicleSideAlias,
				["TRANSPORT HELICOPTER", "B_Heli_Transport_01_F", "O_Heli_Light_02_unarmed_F"] new VehicleSideAlias,
				
				// Wrecks
				["HELICOPTER WRECK", "Land_Wreck_Heli_Attack_01_F", "Land_Wreck_Heli_Attack_02_F"] new VehicleSideAlias,
				
				// Ammo boxes
				["AMMOBOX BASIC AMMO", "Box_NATO_Ammo_F", "Box_East_Ammo_F"] new VehicleSideAlias,
				["AMMOBOX BASIC WEAPONS", "Box_NATO_Wps_F", "Box_East_Wps_F"] new VehicleSideAlias,
				["AMMOBOX SPECIAL WEAPONS", "Box_NATO_WpsSpecial_F", "Box_East_WpsSpecial_F"] new VehicleSideAlias,
				["AMMOBOX GRENADES", "Box_NATO_Grenades_F", "Box_East_Grenades_F"] new VehicleSideAlias,
				["AMMOBOX ORDNANCE", "Box_NATO_AmmoOrd_F", "Box_East_AmmoOrd_F"] new VehicleSideAlias,
				["AMMOBOX LAUNCHERS", "Box_NATO_WpsLaunch_F", "Box_East_WpsLaunch_F"] new VehicleSideAlias,
				["AMMOBOX SUPPORT", "Box_NATO_Support_F", "Box_East_Support_F"] new VehicleSideAlias,
				
				// Ammo boxes
				["ASSAULT BOAT", "B_Boat_Transport_01_F", "O_Boat_Transport_01_F"] new VehicleSideAlias,
				
				["UAV BACKPACK", "B_UAV_01_backpack_F", "O_UAV_01_backpack_F"] new VehicleSideAlias,
				["UAV TERMINAL", "B_UavTerminal", "O_UavTerminal"] new VehicleSideAlias,
				
				// Turrets
				["STATIC AA LAUNCHER", "B_static_AA_F", "O_static_AA_F"] new VehicleSideAlias,
				
				// Items
				["OPTIC ACO", "optic_Aco", "optic_ACO_grn"] new VehicleSideAlias,
				["OPTIC ACO SMG", "optic_Aco_smg", "optic_ACO_grn_smg"] new VehicleSideAlias,
				["OPTIC RCO", "optic_Hamr", "optic_MRCO"] new VehicleSideAlias,
				["OPTIC MOS", "optic_SOS", "optic_SOS"] new VehicleSideAlias,
				["OPTIC LRPS", "optic_LRPS", "optic_LRPS"] new VehicleSideAlias,
				
				["BINOCULAR", "Binocular", "Binocular"] new VehicleSideAlias,
				["LASER DESIGNATOR", "Laserdesignator", "Laserdesignator_02"] new VehicleSideAlias,
				["DESIGNATOR BATTERIES", "Laserbatteries", "Laserbatteries"] new VehicleSideAlias,
				["RANGE FINDER", "Rangefinder", "Rangefinder"] new VehicleSideAlias,
				["FIRST AID KIT", "FirstAidKit", "FirstAidKit"] new VehicleSideAlias,
				["GPS", "ItemGPS", "ItemGPS"] new VehicleSideAlias,
				["FLASHLIGHT", "acc_flashlight", "acc_flashlight"] new VehicleSideAlias,
