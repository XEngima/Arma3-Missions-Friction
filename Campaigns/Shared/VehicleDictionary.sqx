/*
 * Name:	VehicleDictionary
 * Date:	2020-07-04
 * Version: 1.0
 * Author:  Engima
 *
 * Description:
 * Handles vehicle types for both sides.
 *
 * DO NOT EDIT THIS FILE!
 *
 * If you do there will be conflicts when you update the TvTCF CPack in the future. Instead you can add units to this 
 * object by from the top of the mission's Setup method call call the vehicle dictionary's AddEntry method, like:
 *
 * protected override method Setup()
 * {
 *     [alias, westVehicletype, eastVehicleType] call _self.VehicleDictionary.AddEntry;
 *     ...
 * };
 */
 
using Tvtcf.Server;

namespace Campaigns
{
	public class VehicleDictionary
	{
		private fields ["_mVehicleTypes" as Array /* of VehicleSideAlias */];
		
		// Creates a VehicleDictionary object.
		public constructor()
