 * Description:
 * Static class that holds all server side configs, so they can be reached from anywhere on the server.
 */

using Mission.Server;
using Mission.Common.Statics;

namespace Mission.Server.Statics
{
	public class ServerObjects
	{
		// Initializes the ServerObjects object.
		public static method Init()
		{
			_self.Campaign = new Campaign;
			_self.MissionUnitsHandler = new MissionUnitsHandler;
			_self.CampaignEngine = [CommonObjects.BaseMarkersConfig, _self.MissionUnitsHandler, _self.Campaign, CommonObjects.MissionParametersHandler.AiWestFrequency, CommonObjects.MissionParametersHandler.AiEastFrequency] new CampaignEngine;
		};
		
		public static property Campaign Campaign { get; private set; };
		public static property CampaignEngine CampaignEngine { get; private set; };
		public static property MissionUnitsHandler MissionUnitsHandler { get; private set; };
	};
};
