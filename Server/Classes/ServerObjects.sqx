 * Description:
 * Static class that holds all server side configs, so they can be reached from anywhere on the server.
 */

using Mission.Server;

namespace Mission.Server.Statics
{
	public class ServerObjects
	{
		// Initializes the ServerObjects object.
		public static method Init()
		{
			// [Instantiate server config and handler classes here. By that they are reachable from anywhere on the server]
			
			_self.GameplayConfig = new GameplayConfig;
			_self.ArrowConfig = new ArrowConfig;
		};
		
		// [Declare server config and handler classes as static properties here]
		
		// Gets the gamelay config object.
		public static property IGameplayConfig GameplayConfig { get; private set; };
		
		// Gets the arrow config object.
		public static property IArrowConfig ArrowConfig { get; private set; };
	};
};
