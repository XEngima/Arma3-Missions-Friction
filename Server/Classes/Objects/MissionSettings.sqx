namespace Tvtcf.Server
{
	public class MissionSettings
	{
		// Creates a MissionSettings object.
		public constructor()
		{
			_self.Name = "New Mission";
			_self.StartTimeOfDay = 12;
			_self.InsertionAreasActing = [];
			_self.InsertionAreasOpposing = [];
			_self.VisibleMarkersActing = [];
			_self.VisibleMarkersOpposing = [];
			_self.AddReturnObjectiveForActing = false;
			_self.AddReturnObjectiveForOpposing = false;
		};
		
		public property String Name { get; set; };
		
		public property Scalar StartTimeOfDay { get; set; };
		
		public property Array InsertionAreasActing { get; set; };
		
		public property Array InsertionAreasOpposing { get; set; };
		
		public property Array VisibleMarkersActing { get; set; };
		
		public property Array VisibleMarkersOpposing { get; set; };
		
		public property Boolean AddReturnObjectiveForActing { get; set; };
		
		public property Boolean AddReturnObjectiveForOpposing { get; set; };
	};
};
