namespace Mission.Server
{
	public class MissionSettings
	{
		// Creates a MissionSettings object.
		public constructor()
		{
			_self.Name = "New Mission";
			_self.StartTimeOfDay = 12;
			_self.MaximumMissionTime = 30;
			_self.StartMarkersActing = [];
			_self.StartMarkersOpposing = [];
			_self.SideMarkersActing = [];
			_self.SideMarkersOpposing = [];
			_self.AddReturnObjectiveForActing = false;
			_self.AddReturnObjectiveForOpposing = false;
		};
		
		public property String Name { get; set; };
		
		public property Scalar StartTimeOfDay { get; set; };
		
		public property Scalar MaximumMissionTime { get; set; };
		
		public property Array StartMarkersActing { get; set; };
		
		public property Array StartMarkersOpposing { get; set; };
		
		public property Array SideMarkersActing { get; set; };
		
		public property Array SideMarkersOpposing { get; set; };
		
		public property Boolean AddReturnObjectiveForActing { get; set; };
		
		public property Boolean AddReturnObjectiveForOpposing { get; set; };
	};
};
