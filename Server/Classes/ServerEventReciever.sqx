using Mission.Communication;

namespace Mission.Server.Statics
{
	public class ServerEventReciever
	{
		public static method OnPlayerPerformingInsertion("_player" as Object, "_position" as Array)
		{
			[group _player, _position] call ServerObjects.Campaign.InsertGroup;
			
			["ClientEventReciever.OnInsertGroup", [group _player, _position]] call Remote.Invoke;
		};
	};
};
