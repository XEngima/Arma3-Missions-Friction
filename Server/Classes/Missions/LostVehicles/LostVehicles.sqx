using Mission.Common;

namespace Mission.Server
{
	public class LostVehicles : Mission
	{
		private fields ["_mAmmoTruck" as Object, "_mFuelTruck" as Object];
		
		// Creates a AirBaseMadness object.
		public constructor("_baseMarkersConfig" as IBaseMarkersConfig, "_actingSide" as Side)
		{
			[_baseMarkersConfig, _actingSide] call _base.Constructor;
		};
		
		protected override method Initialize()
		{
			_self.Name = "Lost Vehicles";
			_self.StartMarkersActing = ["m03a_StartArea1"];
			_self.StartMarkersOpposing = ["m03o_StartArea1"];
		};
		
		public override method Setup()
		{
			_mAmmoTruck = ["AMMO TRUCK", MissionSide.Acting, "m03_AmmoTruck"] call _self.CreateSideVehicleOnMarker;
			_mFuelTruck = ["FUEL TRUCK", MissionSide.Acting, "m03_FuelTruck"] call _self.CreateSideVehicleOnMarker;
		
			_self.GainedTokenActing = HistoryToken.Fuel;
		
			call _base.Setup;
		};
		
		protected override method MissionObjective CreatePrimaryObjectiveForActing()
		{
			private _shortDescription = "Reach the ammo truck.";
			private _longDescription = "Reach the ammo truck.";
			
			return [_shortDescription, _longDescription] new MissionObjective;
		};
		
		protected override method MissionObjective CreateSecondaryObjectiveForActing()
		{
			private _shortDescription = "Reach the fuel truck.";
			private _longDescription = "Reach the fuel truck.";
			
			return [_shortDescription, _longDescription] new MissionObjective;
		};
		
		protected override method MissionObjective CreatePrimaryObjectiveForOpposing()
		{
			private _shortDescription = "Reach the ammo truck.";
			private _longDescription = "Reach the ammo truck.";
			
			return [_shortDescription, _longDescription] new MissionObjective;
		};
		
		protected override method Boolean PrimaryObjectiveFulfilledForActing()
		{
			return { _x distance _mAmmoTruck < 10 } count _self.ActingPlayers > 0;
		};
		
		protected override method Boolean SecondaryObjectiveFulfilledForActing()
		{
			return { _x distance _mFuelTruck < 10 } count _self.ActingPlayers > 0;
		};
		
		protected override method Boolean PrimaryObjectiveFulfilledForOpposing()
		{
			return true; //{ _x distance _mTruck < 10 } count _self.OpposingPlayers > 0;
		};
	};
};
