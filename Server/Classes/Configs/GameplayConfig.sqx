 * Description:
 * An object containing all relevant and editable settings for a mission round.
 */

namespace Mission.Server
{
	public class GameplayConfig : IGameplayConfig
	{
		// Creates a DefaultGameSettings object.
		public constructor()
		{
			_self.GameTime = 60;
			_self.ArrowSpawnRadius = 50;
		};
		
		// Gets the game time in seconds.
		public property Scalar GameTime { get; protected set; };
		
		// Gets the max arrow spawn radius from the starting position in meters.
		public property Scalar ArrowSpawnRadius { get; protected set; };
	};
};
