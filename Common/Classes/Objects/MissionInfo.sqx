namespace Mission.Common
{
	public class MissionInfo
	{
		// Creates a MissionInfo object.
		public constructor("_blueArrowPos" as Array, "_redArrowPos" as Array)
		{
			_self.BlueArrowPos = _blueArrowPos;
			_self.RedArrowPos = _redArrowPos;
		};
		
		// Gets the position for the blue arrow.
		public property Array BlueArrowPos { get; private set; };
		
		// Gets the position for the red arrow.
		public property Array RedArrowPos { get; private set; };
	};
};
