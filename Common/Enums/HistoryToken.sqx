namespace Mission.Common
{
	// The key for stuff that may be gained, lost, used and/or missing in missions during a campaign.
	// NOTE: A new value here need to also be added to HistoryTokenMeta.ToString below!
	public enum HistoryToken
	{
		Fuel,
		DivingMateriel,
		GuerillaAlliance,
		HawkIntel,
		Reinforcements,
		Explosives
	};
	
	public class HistoryTokenMeta
	{
		public static method ToString("_key" as HistoryToken)
		{
			switch (_key) do {
				case HistoryToken.Fuel: { return "Fuel"; };
				case HistoryToken.DivingMateriel: { return "Diving materiel"; };
				case HistoryToken.GuerillaAlliance: { return "Guerilla alliance"; };
				case HistoryToken.HawkIntel: { return "Intel found in helicopter"; };
				case HistoryToken.Reinforcements: { return "Reinforcements"; };
				case HistoryToken.Explosives: { return "Explosives"; };
				default { return "<< History token key not defined >>"; };
			};
		};
	};
};
